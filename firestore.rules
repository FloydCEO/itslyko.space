rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function isSignedIn() { return request.auth != null; }
    function isNotBanned() { return !exists(/databases/$(database)/documents/bans/$(request.auth.uid));}
    function isOwner(uid) { return request.auth.uid == uid; }

    // Users
    match /users/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && isOwner(userId) && isNotBanned();
    }

    // Usernames
    match /usernames/{username} {
      allow read: if true;
      allow write: if isSignedIn() && isOwner(resource.data.userId);
    }

    // Posts
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn() && isNotBanned() && request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && (isOwner(resource.data.authorId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin','CEO']);
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin','CEO'];
    }

    // Likes
    match /likes/{likeId} {
      allow read: if true;
      allow write: if isSignedIn() && isNotBanned() && request.resource.data.userId == request.auth.uid;
    }

    // Comments
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isSignedIn() && isNotBanned();
      allow delete: if isSignedIn() && (isOwner(resource.data.authorId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin','CEO']);
    }

    // Views
    match /postViews/{viewId} {
      allow read: if true;
      allow write: if isSignedIn() && isNotBanned();
    }

    // Bans
    match /bans/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin','CEO']);
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin','CEO'];
    }

    // Ban Appeals
    match /banAppeals/{appealId} {
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin','CEO']);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin','CEO'];
    }

    // Reports
    match /reports/{reportId} {
      allow read: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin','CEO'];
      allow write: if isSignedIn();
    }

    // Notifications
    match /notifications/{notifId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow write: if isSignedIn();
    }

    // Follows
    match /follows/{followId} {
      allow read: if true;
      allow write: if isSignedIn() && isNotBanned();
    }

    // Admin Logs
    match /adminLogs/{logId} {
      allow read: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin','CEO'];
      allow write: if isSignedIn();
    }
  }
}
