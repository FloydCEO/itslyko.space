rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents
    match /{document=**} {
      allow read: if true;
    }
    
    // Posts - allow all authenticated users to create, read, update, delete
    match /posts/{postId} {
      allow create: if request.auth != null && request.auth.uid != null;
      allow read: if true;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.authorId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO']);
      allow delete: if request.auth != null && 
        (request.auth.uid == resource.data.authorId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO']);
    }
    
    // Post views - allow all authenticated users
    match /postViews/{viewId} {
      allow create, read: if request.auth != null && request.auth.uid != null;
    }
    
    // Likes - allow all authenticated users
    match /likes/{likeId} {
      allow create, read, delete: if request.auth != null && request.auth.uid != null;
    }
    
    // Comments - allow all authenticated users
    match /comments/{commentId} {
      allow create, read: if request.auth != null && request.auth.uid != null;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.authorId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO']);
    }
    
    // Users - allow read access to all, update only own profile
    match /users/{userId} {
      allow read: if true;
      allow update: if request.auth != null && 
        (request.auth.uid == userId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO']);
    }
    
    // Usernames - allow read access to all
    match /usernames/{username} {
      allow read: if true;
    }
    
    // Follows - allow all authenticated users
    match /follows/{followId} {
      allow create, read, delete: if request.auth != null && request.auth.uid != null;
    }
    
    // Reports - allow all authenticated users to create and read
    match /reports/{reportId} {
      allow create: if request.auth != null && request.auth.uid != null;
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO'];
      allow update: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO'];
    }
    
    // Bans - allow only Admin and CEO
    match /bans/{userId} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO'];
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO'];
    }
    
    // Admin logs - allow only Admin and CEO
    match /adminLogs/{logId} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO'];
      allow create: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rank in ['Admin', 'CEO'];
    }
    
    // Notifications - allow users to read their own notifications
    match /notifications/{notificationId} {
      allow read, create, update: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
  }
}
