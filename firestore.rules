rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - read by all, write by owner
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Usernames - read by all, write by authenticated users
    match /usernames/{username} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Posts - read by all, write by authenticated users
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Comments - read by all, write by authenticated users
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
    
    // Likes - read by all, write by authenticated users
    match /likes/{likeId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Follows - read by all, write by authenticated users
    match /follows/{followId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.followerId;
    }
    
    // Post views - read by all, write by authenticated users
    match /postViews/{viewId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    
    // Reports - read by admins, write by authenticated users
    match /reports/{reportId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }
    
    // Bans - read by all, write by admins
    match /bans/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Admin logs - read/write by admins
    match /adminLogs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Notifications - read/write by user
    match /notifications/{notificationId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Metadata - read by all
    match /metadata/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
