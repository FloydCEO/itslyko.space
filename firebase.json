{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin.html",
        "destination": "/admin.html"
      },
      {
        "source": "/auth.html",
        "destination": "/auth.html"
      },
      {
        "source": "/help.html",
        "destination": "/help.html"
      },
      {
        "source": "/profile.html",
        "destination": "/profile.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
